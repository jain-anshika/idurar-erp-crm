# IDURAR ERP/CRM Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration (REQUIRED)
# Get your MongoDB connection string from: https://cloud.mongodb.com/
DATABASE="mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority"

# JWT Secret for authentication (REQUIRED)
# Generate a secure random string for production
JWT_SECRET="your_private_jwt_secret_key_here"

# Application Environment (REQUIRED)
NODE_ENV="development"

# Server Configuration (REQUIRED)
PORT=8888
PUBLIC_SERVER_FILE="http://localhost:8888/"

# OpenSSL Configuration for compatibility
OPENSSL_CONF="/dev/null"

# Email Service (OPTIONAL - for email notifications)
# Get API key from: https://resend.com/
#RESEND_API="your_resend_api_key_here"

# AI Features (OPTIONAL - for OpenAI integration)
# Get API key from: https://platform.openai.com/api-keys
#OPENAI_API_KEY="your_openai_api_key_here"

# Digital Ocean Spaces (OPTIONAL - for file storage)
# Configure if using DO Spaces for file storage
#DO_SPACES_KEY="your_do_spaces_access_key"
#DO_SPACES_SECRET="your_do_spaces_secret_key"
#DO_SPACES_URL="your_region.digitaloceanspaces.com"
#DO_SPACES_NAME="your_bucket_name"
#REGION="nyc3"
